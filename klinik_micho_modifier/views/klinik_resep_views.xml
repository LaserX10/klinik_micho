<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- model.name form view -->
        <record id="klinik_resep_view_form" model="ir.ui.view">
            <field name="name">klinik.resep.view.form</field>
            <field name="model">klinik.resep</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group name="name" string="Informasi Resep">
                            <!-- Add your fields here -->
                                <field name="kode_resep" />
                                <field name="obat_ids" placeholder="Pilih Obat" widget="many2many_tags"/>
                                <field name="tanggal" />
                                <field name="pasien_id"/>
                                <field name="dokter_id"/>
                                <field name="keterangan" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="klinik_resep_view_tree" model="ir.ui.view">
            <field name="name">klinik.resep.view.tree</field>
            <field name="model">klinik.resep</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="kode_resep" />
                    <field name="obat_ids" widget="many2many_tags" />
                    <field name="tanggal" />
                    <field name="pasien_id"/>
                    <field name="dokter_id"/>
                    <field name="keterangan" />
                </tree>
            </field>
        </record>
        
        <!-- model.name action window -->
        <record id="klinik_resep_action" model="ir.actions.act_window">
            <field name="name">Data Resep</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">klinik.resep</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
        <menuitem id="klinik_micho_menu_root" name="Klinik Micho" sequence="1"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="resep_menu_act" name="Resep" parent="klinik_micho_menu_root" action="klinik_resep_action" sequence="5"/>
    
    </data>
    

</odoo>
