<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- model.name form view -->
        <record id="klinik_administrasi_view_form" model="ir.ui.view">
            <field name="name">klinik.administrasi.view.form</field>
            <field name="model">klinik.administrasi</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group name="name" string="Informasi Administrasi">
                            <!-- Add your fields here -->
                            <field name="kode_administrasi" />
                            <field name="tanggal" />
                            <field name="pasien_id" placeholder="Pilih Pasien"/>
                            <field name="usia"/>
                            <field name="jenis_kelamin"/>
                            <field name="dokter_id" placeholder="Pilih Dokter" required="True"/>
                            <field name="biaya" string="Biaya Layanan"/>
                            <field name="resep_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="klinik_administrasi_view_tree" model="ir.ui.view">
            <field name="name">klinik.administrasi.view.tree</field>
            <field name="model">klinik.administrasi</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="kode_administrasi" />
                    <field name="tanggal" />
                    <field name="pasien_id" />
                    <field name="usia"/>
                    <field name="jenis_kelamin"/>
                    <field name="dokter_id" />
                    <field name="biaya" string="Biaya Layanan" />
                    <field name="resep_id"/>
                </tree>
            </field>
        </record>
        
        <!-- model.name action window -->
        <record id="klinik_administrasi_action" model="ir.actions.act_window">
            <field name="name">Data administrasi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">klinik.administrasi</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
        <menuitem id="klinik_micho_menu_root" name="Klinik Micho" sequence="1"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="administrasi_menu_act" name="Administrasi" parent="klinik_micho_menu_root" action="klinik_administrasi_action" sequence="6"/>
    
    </data>
    

</odoo>
